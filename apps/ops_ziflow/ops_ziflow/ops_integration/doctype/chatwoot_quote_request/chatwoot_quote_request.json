{
  "doctype": "DocType",
  "name": "Chatwoot Quote Request",
  "module": "OPS Integration",
  "custom": 1,
  "istable": 1,
  "editable_grid": 1,
  "track_changes": 0,
  "field_order": [
    "request_date",
    "product_type",
    "quantity",
    "specifications",
    "delivery_method",
    "status",
    "quote_amount",
    "quote_sent_date",
    "notes"
  ],
  "fields": [
    {
      "fieldname": "request_date",
      "fieldtype": "Datetime",
      "label": "Request Date",
      "reqd": 1,
      "in_list_view": 1,
      "default": "Now"
    },
    {
      "fieldname": "product_type",
      "fieldtype": "Select",
      "label": "Product Type",
      "options": "Business Cards\nFlyers\nBanners\nSigns\nBrochures\nPosters\nLabels\nStickers\nDecals\nPromotional Items\nOther",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "quantity",
      "fieldtype": "Data",
      "label": "Quantity",
      "in_list_view": 1
    },
    {
      "fieldname": "specifications",
      "fieldtype": "Small Text",
      "label": "Specifications",
      "description": "Size, material, finish, etc."
    },
    {
      "fieldname": "delivery_method",
      "fieldtype": "Select",
      "label": "Quote Delivery Method",
      "options": "Email\nChat\nPhone",
      "default": "Email"
    },
    {
      "fieldname": "status",
      "fieldtype": "Select",
      "label": "Status",
      "options": "Pending\nSent\nAccepted\nDeclined\nExpired",
      "default": "Pending",
      "reqd": 1,
      "in_list_view": 1
    },
    {
      "fieldname": "quote_amount",
      "fieldtype": "Currency",
      "label": "Quote Amount",
      "in_list_view": 1
    },
    {
      "fieldname": "quote_sent_date",
      "fieldtype": "Date",
      "label": "Quote Sent Date"
    },
    {
      "fieldname": "notes",
      "fieldtype": "Small Text",
      "label": "Notes"
    }
  ],
  "permissions": []
}
